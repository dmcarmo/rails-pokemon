<%= link_to "< Pokedex", root_path %>

<h1>Let's Get Training</h1>

<% if @trainers.exists? %>
  <div class="grid">
  <% @trainers.each do |trainer| %>
    <%= render trainer %> 
  <% end %>
  </div>
<% else %>
  <p>There are no Trainers on the Pokedex</p>
<% end %>

<%= link_to "New Trainer", new_trainer_path, class: "btn btn-primary" %>